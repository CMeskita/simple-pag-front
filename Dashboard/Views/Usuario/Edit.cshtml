@model Dashboard.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<
<div class="content-wrapper">
    <!-- Inicio do Header da pagina -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Usuário</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Starter Page</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Inicio do Conteudo -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg">
                    <!-- Inicio do Card -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h5 class="m-0">Cadastro de Usuário</h5>
                        </div>
                        <div class="card-body">

                            <!-- Inicio do Cadastro -->

                            <div class="row">
                                <div class="col-md">
                                    <form asp-action="EditUsuario">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            <label asp-for="Nome" class="control-label"></label>
                                            <input asp-for="Nome" class="form-control" />
                                            <span asp-validation-for="Nome" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Email" class="control-label"></label>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ChavePrivada" class="control-label" ></label>
                                            <input asp-for="ChavePrivada" class="form-control" type="password" placeholder="******" />
                                            <span asp-validation-for="ChavePrivada" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Save" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>


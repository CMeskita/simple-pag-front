@model Dashboard.Models.Entity.Finalizadora

@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper">
    <!-- Inicio do Header da pagina -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Finalizadora</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Starter Page</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Inicio do Conteudo -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg">
                    <!-- Inicio do Card -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h5 class="m-0">Finalizar Pagamento</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <label asp-for="Valor" class="control-label"></label>
                                            <input asp-for="Valor" type="number" class="form-control" />
                                            <span asp-validation-for="Valor" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" data-select2-id="44">
                                            <label asp-for="FormaPagamento" class="control-label"></label>
                                            <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                                <option selected="selected" data-select2-id="3">
                                                    <font style="vertical-align: inherit;">
                                                        <font style="vertical-align: inherit;">Cartão</font>
                                                    </font>
                                                </option>
                                                <option data-select2-id="46">
                                                    <font style="vertical-align: inherit;">
                                                        <font style="vertical-align: inherit;">Pix</font>
                                                    </font>
                                                </option>

                                            </select>
                                            <span class="select2 select2-container select2-container--default select2-container--below" dir="ltr" data-select2-id="2" style="width: 100%;">
                                                <span class="selection">

                                                </span><span class="dropdown-wrapper" aria-hidden="true"></span>
                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="QtdParcelas" class="control-label"></label>
                                            <input asp-for="QtdParcelas" class="form-control" />
                                            <span asp-validation-for="QtdParcelas" class="text-danger"></span>
                                        </div>
                                        <div class="form-group" data-select2-id="44">
                                            <label asp-for="Modalidade" class="control-label"></label>
                                            <select class="form-control select2 select2-hidden-accessible" style="width: 100%;" data-select2-id="1" tabindex="-1" aria-hidden="true">
                                                <option selected="selected" data-select2-id="3">
                                                    <font style="vertical-align: inherit;">
                                                        <font style="vertical-align: inherit;">Crédito</font>
                                                    </font>
                                                </option>
                                                <option data-select2-id="46">
                                                    <font style="vertical-align: inherit;">
                                                        <font style="vertical-align: inherit;">Débito</font>
                                                    </font>
                                                </option>

                                            </select>
                                            <span class="select2 select2-container select2-container--default select2-container--below" dir="ltr" data-select2-id="2" style="width: 100%;">
                                                <span class="selection">

                                                </span><span class="dropdown-wrapper" aria-hidden="true"></span>
                                            </span>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Create" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


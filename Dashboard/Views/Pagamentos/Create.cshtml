@model Dashboard.Models.Entity.FormaPagamento

@{
    ViewData["Title"] = "Create";
}

<div class="content-wrapper ">
    <!-- Inicio do Header da pagina -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Forma de Pagamento</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Starter Page</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- Inicio do Conteudo -->
    <div class="content">
        <div class="container-fluid ">
            <div class="row">
                <div class="col-lg-6">
                    <!-- Inicio do Card -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h5 class="m-0">Cadastro de Pagamento</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 ">
                                    <form asp-action="Add">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <label asp-for="Nome" class="control-label"></label>
                                            <input asp-for="Nome" class="form-control" />
                                            <span asp-validation-for="Nome" class="text-danger"></span>
                                        </div>                               
                                        <div class="form-group">
                                            <label asp-for="CodFinalizadora" class="control-label"></label>
                                            <input asp-for="CodFinalizadora" class="form-control" />
                                            <span asp-validation-for="CodFinalizadora" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Sigla" class="control-label"></label>
                                            <input asp-for="Sigla" class="form-control" />
                                            <span asp-validation-for="Sigla" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Cadastrar" class="btn btn-info" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

